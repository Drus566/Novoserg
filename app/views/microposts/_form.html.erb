<%= form_with(model: @micropost, id: 'micropost-form') do |f| %>
    <%= render 'shared/error_messages', object: f.object %> 
    <div id="micropost-form-aside">
        <h1 class="main-title"><%= yield(:title)%></h1>
    </div>
    <div id="micropost-form-field">
        <div id="tags-all">
            <p class="tag-title">Добавить метки:</p>
            <%= render partial: 'shared/tag', collection: @tags %>
        </div>
        <% unless @micropost.tags.empty? %>
            <div id="tags-post">
                <p class="tag-title">Метки поста: </p>
                <%= render partial: 'shared/tag', collection: @micropost.tags %>
            </div>
        <% end %>
        <%= f.text_area :content, placeholder: "Напишите сообщение...", id: 'micropost-textarea', maxlength: '600' %>
        <%= f.submit yield(:button_text),  id: "micropost-form-btn" %>  
        <%= hidden_field_tag 'inactive_tags', '' %>
        <%= hidden_field_tag 'active_tags', '' %>
    </div>
<% end %>