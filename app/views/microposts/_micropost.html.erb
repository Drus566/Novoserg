<div class="post">
    <li id="micropost-<%= micropost.id %>">
        <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
        <% if logged_in? %>
            <% if user_admin? || current_user.id == micropost.user.id %>
                <%= link_to "Редактировать", edit_micropost_path(micropost.id) %>
                <%= link_to "Удалить пост", micropost, :method => :delete, data: { :confirm => 'Вы уверены?' } %>     
            <% end %>
        <% end %>       
        <span class="content"><%= micropost.content %></span>
        <span class="timestamp">Пост создан <%= time_ago_in_words(micropost.created_at) %> назад.</span>
        <span class="tags">
            <% micropost.tags.each do |tag| %>
                <%= link_to tag.name, "#", class: "view-tag" %>
            <% end %>
        </span>
    </li>
</div>
